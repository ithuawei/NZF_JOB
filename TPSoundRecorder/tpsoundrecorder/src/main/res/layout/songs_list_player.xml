<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_song_player"
    android:background="#282828"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_songs_back_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/songs_list_back"
            android:onClick="songListBack"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="List"
            android:textColor="#FFFFFF"
            android:textSize="24sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_songs_back_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_songs_back_list"
        android:background="@mipmap/songsdivider"/>

    <ExpandableListView
        android:scrollbars="none"
        android:id="@+id/elv_songs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_songs_back_divider">
    </ExpandableListView>

    <include
        layout="@layout/player_inner"
        />
</RelativeLayout>
