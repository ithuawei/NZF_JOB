<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#282828"
                android:descendantFocusability="blocksDescendants"
                android:padding="10dp">
    <!--加这层是为了gone的时候上面的条目能下移居中-->
    <LinearLayout
        android:layout_marginLeft="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rr_songs_name_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_item_songs_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Recording - 001"
                android:textColor="#ffffff"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/iv_item_songs_playing"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/tv_item_songs_name"
                android:src="@mipmap/playing"
                android:visibility="gone"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_item_songs_calendar_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rr_songs_name_pic"
            android:layout_marginTop="3dp"
            android:text="2016-08-09"
            android:textColor="#707070"
            android:textSize="13sp"
            android:visibility="visible"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <TextView
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_item_songs_calendar_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="2016-08-19"
            android:textColor="#707070"
            android:textSize="13sp"/>

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_songs_calendar_right"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/iv_item_songs_item_flag"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/flag"/>

            <TextView
                android:id="@+id/tv_item_songs_timeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/iv_item_songs_item_flag"
                android:text="00:30.14"
                android:textColor="#707070"
                android:textSize="12sp"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>